// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String    // Thumbnail image
  modelUrl    String    // Path to 3D .glb file
  createdAt   DateTime  @default(now())
}

